<% if @success %>
  if($("#favorable_<%= @favorable_type.demodulize.underscore %>_<%= @favorable_id %>").length) {
    $("#favorable_<%= @favorable_type.demodulize.underscore %>_<%= @favorable_id %>").attr('href', '<%= favorites_path(favorable_id: @favorite.favorable_id, favorable_type: @favorite.favorable_type) %>').data('method', 'post').text('<%= Spree.t(:add_favorite) %>')
  } else {
    $("#favorite_<%= @favorite.id %>").remove();
  }
<% end %>
